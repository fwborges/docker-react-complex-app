{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client-app",
            "image": "fwborges/multi-client",
            "hostname": "client",
            "essential" : false
        },
        {
            "name": "nginx",
            "image": "fwborges/multi-nginx",
            "essential" : true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "conteinerPort": 80
                }
            ],
            "links": ["client", "server"]
        },
        {
            "name": "server-app",
            "image": "fwborges/multi-server",
            "hostname": "api",
            "essential" : false
        },
        {
            "name": "worker-app",
            "image": "fwborges/multi-worker",
            "hostname": "worker",
            "essential" : false
        }
    ]
}